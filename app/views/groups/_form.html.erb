<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :group_name %>
  </div>

  <div class="field">
    <%= form.label :members %>
    <%= form.number_field :members, id: :group_members %>
  </div>

  <div class="field">
    <%= form.label :debut %>
    <%= form.date_select :debut, id: :group_debut %>
  </div>

  <div class="field">
    <%= form.label :band_type %>
    <%= form.select :band_type, Group.band_types.keys %>

  </div>

  <div class="field">
    <%= form.fields_for :crews do |crew_form|%>
      <%= crew_form.label :name, 'Member Name' %>
      <%= crew_form.text_field :name %>
    <%end%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
